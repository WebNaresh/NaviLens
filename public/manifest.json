{
  "manifest_version": 3,
  "name": "NaviLens - Screen Capture",
  "version": "1.0.1",
  "description": "Capture full-page screenshots, visible areas, or custom crops and copy them directly to your clipboard.",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "capture_full_page": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "MacCtrl+Shift+D"
      },
      "description": "Capture Full Page"
    },
    "capture_full_page_clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "Capture Full Page & Copy"
    },
    "capture_viewport_clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Capture Viewport & Copy"
    },
    "capture_crop_clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
      },
      "description": "Crop & Capture to Clipboard"
    }
  }
}
